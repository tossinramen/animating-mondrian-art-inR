  x_start = c(-0.5, 9), 
  x_end = c(2.5, 10.5), 
  y = c(7, 1.25)
)

half_lines_vertical = data.frame(
  x = 9,             
  y_start = -0.5,       
  y_end = 3          
)

  ggplot() +
  geom_rect(data = rectangles, aes(xmin = xmin, xmax = xmax, ymin = ymin, 
